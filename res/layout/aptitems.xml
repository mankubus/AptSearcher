<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_height="57dp"
    android:background="@color/llBackgroundColor"
    android:orientation="horizontal" android:layout_width="wrap_content">

    <TextView
        android:id="@+id/tvAptTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tvAptCost"
        android:text="Title"
        android:textAppearance="@style/MainTextNorm" android:layout_marginTop="7dp" android:background="@color/llBackgroundColor" android:paddingLeft="9dp"/>
    <TextView
        android:id="@+id/tvAptDist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvAptTitle"
        android:layout_toLeftOf="@+id/tvAptCost"
        android:text="Address"
        android:textAppearance="@style/MainTextNorm" android:layout_marginBottom="7dp" android:paddingLeft="9dp" android:layout_marginTop="-3dp"/>

    <ImageView
        android:id="@+id/imgAptNext"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/map_icon" android:paddingRight="7dp" android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tvAptCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imgAptNext"
        android:text="Cost"
        android:textAppearance="@style/MainTextNorm"
        android:width="90dp" android:layout_centerVertical="true"/>

</RelativeLayout>