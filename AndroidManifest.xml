<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jobs.application"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="4" />

    <application
        android:name=".MainApp"
        android:icon="@drawable/mainicon"
        android:label="@string/app_name">
        <activity
            android:label="@string/app_name"
            android:name=".MainActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".MedActivity"
            android:label="@string/app_name">
      		<intent-filter>
        		<action android:name="com.jobs.application.MedActivityAct" />
        		<category android:name="android.intent.category.DEFAULT" />
      		</intent-filter>
    	</activity>
        
        <activity
            android:name=".AptActivity"
            android:label="@string/app_name">
      		<intent-filter>
        		<action android:name="com.jobs.application.AptActivityAct" />
        		<category android:name="android.intent.category.DEFAULT" />
      		</intent-filter>
    	</activity>
    	
            
        <activity
            android:name=".AptDetails"
            android:label="@string/app_name">
      		<intent-filter>
        		<action android:name="com.jobs.application.AptDetailsActivityAct" />
        		<category android:name="android.intent.category.DEFAULT" />
      		</intent-filter>
    	</activity>
    	
         <activity
            android:name=".AptViewer"
            android:label="@string/app_name">
      		<intent-filter>
        		<action android:name="com.jobs.application.AptViewerAct" />
        		<category android:name="android.intent.category.DEFAULT" />
      		</intent-filter>
    	</activity>
     </application>
    
    <uses-permission android:name="android.permission.INSTALL_PACKAGES"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

</manifest>